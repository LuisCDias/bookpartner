<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layoutstyle" >

    <LinearLayout
        android:id="@+id/books_list_layout"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1.5"
        android:background="@drawable/layoutstyle"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/genre_title_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/layoutstyle"
            android:clickable="true"
            android:gravity="center"
            android:onClick="getGenreBooks"
            android:text="Genre title"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:id="@+id/gradient_1"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/gradient" >
        </View>

        <TextView
            android:id="@+id/genre_title_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/layoutstyle"
            android:clickable="true"
            android:gravity="center"
            android:onClick="getGenreBooks"
            android:text="Genre title"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:id="@+id/gradient_2"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/gradient" >
        </View>

        <TextView
            android:id="@+id/genre_title_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/layoutstyle"
            android:clickable="true"
            android:gravity="center"
            android:onClick="getGenreBooks"
            android:text="Genre title"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
